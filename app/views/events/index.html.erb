<%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
<%= link_to "Sign in", new_user_session_path %>

<h1>Welcome to Index of All Events</h1>

<ul>
  <% @events.each do |event| %>
    <li>
        <p>
            <%= event.id %>
        </p>
        <p>
            <strong>Event name:</strong>
            <%= event.name %>
        </p>
        <p>
            <strong>Event date:</strong>
            <%= event.date %>
        </p>
        <p>
            <strong>Event venue:</strong>
            <%= event.venue %>
        </p>
    
      <%= link_to "Click to attend", user_event_path(event.creator_id, event) %>
    
    </li>
  <% end %>
</ul>


<% if user_signed_in? %>
    <%= link_to 'Click here to create a new event', new_user_event_path(current_user.id) %><br>

    <%= link_to "Click to view your attended events", user_path(current_user)%>
<% end %>