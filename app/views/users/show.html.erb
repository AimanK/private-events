<h1>All attended events for <%= @user.email %> </h1>

<h2>Previously attended events: </h2>
<% if @user.attended_events.past.any? %>
    <ul>
        <% @user.attended_events.past.each do |event| %>
            <li><%= event.name%></li>
        <% end %>
    </ul>
<% end %>

<h2>Future events planned: </h2>
<% if @user.attended_events.future.any? %>
    <ul>
        <% @user.attended_events.future.each do |event| %>
            <li><%= event.name %></li>
        <% end %>
    </ul>
<% end %>

<%= link_to "Back", user_events_path(current_user)%>